{
  "spider": "bergha",
  "website": "bergha",
  "WEBSITE": "BERGHA",
  "channel": 2,
  "category": 4,
  "CategoryID":4,
  "type": "智库性文章",
  "index":"https://www.berghahnjournals.com/view/journals/gps/gps-overview.xml",
  "settings": {
    "USER_AGENT": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_6) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/60.0.3112.90 Safari/537.36",
    "ITEM_PIPELINES":{
            "universalspider.pipelines.NewsMetaPipeline": 300
        },
    "DOWNLOAD_DELAY": 1
  },
  "start_urls": {
    "case": 21,
     "Kwargs":{
       "prefix": "https://www.berghahnjournals.com/search?",
       "q_params": {
         "keyword":"q="
       },
       "langu": "ENGLISH",
       "blankreplace":"+"
     },
    "need_process": 0
  },
  "allowed_domains":[
    "www.berghahnjournals.com"
      ],

  "timezone":2,
  "language":"ENGLISH",
  "date_formatter":["%d/%m/%Y","%Y","%B %d, %Y","%B %Y","%B %d","%Y","%d %m %Y","%d %B %Y","%d %B","%Y %H:%M","%Y-%m-%d","%d %b %Y"],

  "NEED_BLOOM": 1,
  "need_filter_date": 0,

  "table": "ERMS_ALL",
  "rules": "bergha",
 "item": {
    "class": "NewsItemV4",
    "loader": "NewsLoaderV4",
    "attrs": {
      "title": [
        {
          "method": "xpath",
          "args": ["//title//text()"]
        }
      ],

      "description": [
        {
          "method": "xpath",
          "args": ["//section[@class='abstract']//text()"]
        }
      ],

      "text": [
        {
          "method": "xpath",
          "args": ["//section[@class='abstract']//text()"]
        }
      ],

      "dateissued": [
        {
          "method": "xpath",
          "args": ["//meta[@property='article:modified_time']/@content"],
           "re":"\\d{4}-\\d{2}-\\d{2}"
      }
      ],

      "source": [
        {
          "method":"value",
          "args": [
            "German Politics and Society"
          ]
        }
      ],

      "url": [
        {
          "method": "attr",
          "args": ["url"]
        }
      ]

    }
  }


}